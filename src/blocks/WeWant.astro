---
import Container from '../components/Container.astro';
import Title from '../components/Title.astro';
import Descr from '../components/Descr.astro';
import Dev from '../components/Dev.astro';
import List from '../components/List.astro';
import Button from '../components/Button.astro';
import Picture from '../components/Picture.astro';
import Waves from '../svg/Waves.astro';

import { block, content } from '../data/we-want.json';

const { lang } = Astro.props;
---

<div class="we-want">
	<Container>
		<div class="we-want__grid">
			<div class="we-want__block">
				<div class="we-want__block-content">
					<Title lang={lang} title={block.title} mod={'we-want'} />
					<Descr lang={lang} descr={block.descr} section={'we-want-block'} />
				</div>
				<div class="we-want__block-img">
					<Picture picture={block.picture} />
				</div>
				<div class="we-want__block-waves">
					<Waves />
				</div>
			</div>
			<div class="we-want__content">
				<Title lang={lang} title={content.title} mod={'we-want'} />
				<Descr lang={lang} descr={content.descr} section={'we-want-content'} />
				<Dev />
				<Title lang={lang} title={content.listtitle} mod={'creative-lis'} />
				<List lang={lang} list={content.list} mod={'creative'} />
				<Button lang={lang} data={content.button} mod={'list'} />
			</div>
		</div>
	</Container>
</div>

<style lang="scss">
	.we-want {
		&__grid {
			display: grid;

			@include des {
				grid-template-columns: d(571) auto;
				grid-gap: d(48);
				padding: d(72) 0 d(144);
				align-items: center;
			}

			@include tab {
				grid-template-columns: t(571) auto;
				grid-gap: t(48);
				padding: t(72) 0 t(144);
				align-items: center;
			}

			@include mob {
				grid-template-columns: 1fr;
				grid-gap: m(26);
				padding: m(72) 0 m(52);
			}
		}

		&__block {
			position: relative;
			background-color: var(--pink-lace);

			@include des {
				width: 100%;
				height: d(712);
				border-radius: d(32);
			}

			@include tab {
				width: 100%;
				height: t(712);
				border-radius: t(32);
			}

			@include mob {
				width: calc(100% + m(24));
				height: m(540);
				margin-left: m(-12);
				border-radius: m(22);
			}

			&-content {
				position: relative;
				width: 100%;
				height: 100%;
				z-index: 3;

				@include des {
					padding: d(58) d(56) 0;
				}

				@include tab {
					padding: t(58) t(56) 0;
				}

				@include mob {
					padding: m(40) m(26) 0;
				}
			}

			&-img {
				position: absolute;
				bottom: 0;
				left: 0;
				width: 100%;
				height: 100%;
				z-index: 2;

				@include mob {
					height: 77.4%;
				}
			}

			&-waves {
				position: absolute;
				left: 0;
				bottom: 0;
				width: 100%;
				height: 100%;
				z-index: 1;

				@include mob {
					height: 77.4%;
				}
			}
		}

		&__content {
			width: 100%;

			@include des {
				padding: d(0) d(31) d(0) d(56);
			}

			@include tab {
				padding: t(0) t(31) t(0) t(56);
			}

			@include mob {
				padding: m(40) m(16) m(14.5);
			}
		}
	}
</style>
