---
const { picture, format } = Astro.props;
const { src, srcadapive, alt } = picture;
---

{
	src ? (
		<img class="picture" src={`/images/${src}.${format ? format : 'png'}`} alt={alt ? alt : ''} />
	) : (
		<picture>
			<source media="(max-width: 480px)" srcset={`/images/${srcadapive.mobile}.${format ? format : 'png'}`} />
			<source media="(min-width: 481px)" srcset={`/images/${srcadapive.desktop}.${format ? format : 'png'}`} />
			<img class="picture" src={`/images/${srcadapive.desktop}.${format ? format : 'png'}`} alt={alt ? alt : ''} />
		</picture>
	)
}

<style lang="scss">
	.picture {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		width: 100%;
		height: 100%;
		object-fit: cover;
	}
</style>
